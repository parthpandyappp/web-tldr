{
  "manifest_version": 3,
  "name": "Web TLDR Extension",
  "version": "1.0",
  "description": "Extension that displays hello world.",
  "action": {
    "default_icon": {
      "16": "vite.svg",
      "48": "vite.svg",
      "128": "vite.svg"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["tabs", "activeTab", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker.js"
  }
}
